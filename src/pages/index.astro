---
import AppLayout from "../layouts/AppLayout.astro";
import Dashboard from "../components/Dashboard.jsx"
import MagicBento from "../components/MagicBento.jsx";
import LogoHero from "../components/LogoHero.jsx";
import BotHealthWidget from "../components/BotHealthWidget.jsx";
const isAdmin = ((Astro.locals as any).user?.rol || '').toLowerCase() === 'admin';
---

<AppLayout title="Panel principal">
  {isAdmin && <BotHealthWidget client:idle />}
  <MagicBento client:idle isAdmin={isAdmin} />
</AppLayout>

