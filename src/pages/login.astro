---
import "../styles/global.css";
import LoginForm from "../components/LoginForm.jsx";

const base = import.meta.env.BASE_URL || "/";
const user = (Astro.locals as any).user;
const logoSrc = `${base}/logo-gawhats.png`.replace(/\/\//g, "/");
if (user) {
  return Astro.redirect(base);
}
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <title>Login Mensajer&iacute;a Web GA</title>
    <link rel="icon" type="image/png" href="/logo-gawhats.png" sizes="32x32" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@500;700&display=swap" rel="stylesheet">

    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body class="min-h-screen flex items-center justify-center bg-animated text-white px-4">
    <div id="login-wrap" class="w-full max-w-5xl opacity-0 translate-y-2 transition-all duration-500">
      <div class="grid md:grid-cols-2 gap-4 md:gap-6 rounded-[32px] overflow-hidden backdrop-blur-2xl bg-white/5 shadow-[0_25px_80px_rgba(0,0,0,0.45)]">
        <div class="relative p-8 md:p-10 flex flex-col justify-center gap-5 text-left bg-slate-950/70">
          <div>
            <p class="text-[12px] font-semibold tracking-[0.16em] text-emerald-100/80 uppercase">Acceso seguro</p>
            <h1 class="text-3xl md:text-[36px] font-bold text-transparent bg-clip-text bg-gradient-to-r from-emerald-300 via-emerald-200 to-cyan-200" style="font-family: 'Space Grotesk', 'Inter', 'Segoe UI', system-ui, sans-serif;">
              Mensajer&iacute;a Web GA
            </h1>
          </div>
          <p class="text-slate-200/85 text-sm md:text-base max-w-md">Centraliza tus conversaciones y plantillas en un panel moderno y simple.</p>
          <div class="rounded-2xl bg-white/5 backdrop-blur-xl shadow-[0_12px_50px_rgba(0,0,0,0.35)] p-3 md:p-4">
            <LoginForm client:load />
          </div>
        </div>

        <div class="relative min-h-[320px] md:min-h-full bg-gradient-to-br from-emerald-500/22 via-cyan-500/22 to-slate-900/80">
          <div class="absolute inset-0 overflow-hidden pointer-events-none">
            <div class="absolute -top-12 -left-16 w-80 h-80 bg-emerald-400/24 blur-[130px]"></div>
            <div class="absolute top-6 right-0 w-96 h-96 bg-cyan-400/26 blur-[120px]"></div>
            <div class="absolute bottom-0 -left-10 w-72 h-72 bg-emerald-500/22 blur-[110px]"></div>
          </div>
          <div class="relative h-full flex items-center justify-center p-6 md:p-10">
            <img src={logoSrc} alt="Logo Mensajer&iacute;a Web GA" class="w-40 h-40 md:w-44 md:h-44 object-contain drop-shadow-[0_18px_60px_rgba(0,0,0,0.45)]" loading="lazy" />
          </div>
        </div>
      </div>
    </div>
    <script is:inline>
      window.addEventListener('DOMContentLoaded', () => {
        const el = document.getElementById('login-wrap');
        if (el) requestAnimationFrame(() => { el.classList.remove('opacity-0','translate-y-2'); });
      });
    </script>
  </body>
</html>
