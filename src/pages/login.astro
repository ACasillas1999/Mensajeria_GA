---
import "../styles/global.css";
import LoginForm from "../components/LoginForm.jsx";

const base = import.meta.env.BASE_URL || "/";
const user = (Astro.locals as any).user;
const logoSrc = `${base}/logo-gawhats.png`.replace(/\/\//g, "/");
if (user) {
  return Astro.redirect(base);
}
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <title>Login Mensajer&iacute;a Web GA</title>
    <link rel="icon" type="image/png" href="/logo-gawhats.png" sizes="32x32" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@500;700&display=swap" rel="stylesheet">

    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body class="min-h-screen flex items-center justify-center bg-animated text-white">
    <div id="login-wrap" class="w-full max-w-2xl px-6 text-center opacity-0 translate-y-2 transition-all duration-500">
      <div class="flex flex-col items-center gap-4 mb-8">
        <div class="p-4 rounded-3xl bg-white/6 border border-white/10 shadow-lg">
          <img src={logoSrc} alt="Logo Mensajer&iacute;a Web GA" class="w-28 h-28 md:w-32 md:h-32 object-contain drop-shadow-lg" loading="lazy" />
        </div>
        <p class="text-xs font-semibold tracking-[0.18em] text-emerald-100/80 uppercase">Acceso seguro</p>
        <h1 class="text-4xl md:text-[42px] font-bold text-transparent bg-clip-text bg-gradient-to-r from-emerald-300 via-emerald-200 to-cyan-200 drop-shadow-[0_0_20px_rgba(16,185,129,0.2)]" style="font-family: 'Space Grotesk', 'Inter', 'Segoe UI', system-ui, sans-serif;">
          Mensajer&iacute;a Web GA
        </h1>
        <p class="text-slate-200/85 text-sm md:text-base">Centraliza tus conversaciones y plantillas en un panel moderno y simple.</p>
      </div>

      <div class="max-w-lg mx-auto rounded-3xl bg-slate-950/75 border border-white/8 shadow-[0_16px_60px_rgba(0,0,0,0.45)] backdrop-blur-xl p-2">
        <div class="rounded-2xl bg-slate-900/80 border border-white/5 p-2 sm:p-4">
          <LoginForm client:load />
        </div>
      </div>
    </div>
    <script is:inline>
      window.addEventListener('DOMContentLoaded', () => {
        const el = document.getElementById('login-wrap');
        if (el) requestAnimationFrame(() => { el.classList.remove('opacity-0','translate-y-2'); });
      });
    </script>
  </body>
</html>
